<domain type='kvm'>
  <name>laptop</name>
  <memory unit='GiB'>8</memory>
  <vcpu>2</vcpu>
  <os>
    <type>hvm</type>
    <kernel>$PWD/vmlinuz</kernel>
    <initrd>$PWD/initrd.img</initrd>
    <cmdline>root=/dev/vda1 ro console=tty1 console=ttyS0 ip=192.168.123.2::$DEVELOPMENT_DEFAULT_GATEWAY:255.255.255.0::::$DEVELOPMENT_NAMESERVER ds=nocloud;s=http://192.168.123.1:8000/</cmdline>
  </os>
  <cpu mode='host-passthrough'/>
  <devices>
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2' discard='unmap'/>
      <source file='$PWD/laptop.qcow2'/>
      <target dev='vda' bus='virtio'/>
    </disk>
    <interface type='network'>
      <mac address='52:54:00:6a:ad:13'/>
      <source network='apollo'/>
      <model type='virtio'/>
    </interface>
    <graphics type='vnc' autoport='yes'/>
  </devices>
</domain>
