<domain type='kvm'>
  <name>laptop</name>
  <memory unit='GiB'>8</memory>
  <vcpu>2</vcpu>
  <os>
    <type>hvm</type>
    <kernel>{{ env "PWD" }}/vmlinuz</kernel>
    <initrd>{{ env "PWD" }}/initrd.img</initrd>
    <cmdline>root=/dev/vda1 ro console=tty1 console=ttyS0 ip={{ .Laptop.IP }}::{{ .Network.Gateway }}:{{ .Network.IPNet.MaskAsIP }}::::{{ .Network.Nameserver }} ds=nocloud;s=http://{{ .Host.IP }}:8000/</cmdline>
  </os>
  <features>
    <acpi/>
  </features>
  <cpu mode='host-passthrough'/>
  <devices>
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2' discard='unmap'/>
      <source file='{{ env "PWD" }}/laptop.qcow2'/>
      <target dev='vda' bus='virtio'/>
    </disk>
    <interface type='network'>
      <mac address='52:54:00:6a:ad:13'/>
      <source network='apollo'/>
      <model type='virtio'/>
    </interface>
    <graphics type='vnc' autoport='yes'/>
  </devices>
</domain>
